<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vispar.MainActivity$PlaceholderFragment" >

    <ProgressBar
        android:id="@+id/goto_room_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/goto_room_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/loading_in_progress"
        android:visibility="gone" />
    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
     <Button
        android:id="@+id/MyVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Invite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="@string/view_past_events" />

    <Button
        android:id="@+id/Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MyVideo"
        android:layout_alignRight="@+id/MyVideo"
        android:layout_centerVertical="true"
        android:text="@string/start_event" />

    <Button
        android:id="@+id/Invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Room"
        android:layout_alignLeft="@+id/MyVideo"
        android:layout_alignRight="@+id/Room"
        android:layout_marginBottom="36dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/invite_friends" />

</RelativeLayout>
